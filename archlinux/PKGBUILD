# Maintainer: xblade720

pkgname="belote-plus"
pkgver=0.2.1
pkgrel=1
pkgdesc="Local Web app to help organizing Belote tournaments"
arch=("x86_64")
url="https://github.com/julianoMa/BelotePlus"
license=("GPL3")
depends=('python' 'python-flask' 'python-sqlalchemy' 'python-waitress')
source=("https://github.com/julianoMa/BelotePlus/archive/refs/heads/stable.zip")
sha256sums=("SKIP")

package() {
    mv "$srcdir" "$pkgdir/usr/share/BelotePlus"
    cat "python ../share/BelotePlus/app.py" >> "$pkgdir/usr/bin/BelotePlus"
}